{
  "spec": {
      "configuration":{
        "velero":{
          "defaultPlugins": [
            "openshift", "aws"
          ]
        }
      },
      "backupLocations": [
        {
          "velero": {
            "provider": "aws",
            "config": {
              "profile": "default",
              "region": "us-east-1"
            },
            "objectStorage":{
              "bucket": "myBucket"
            },
            "credential":{
              "name": "cloud-credentials",
              "key": "cloud"
            }
          }
        }
      ],
      "snapshotLocations": [
        {
          "velero": {
            "provider": "aws",
            "config": { 
              "profile": "default",
              "region": "us-east-1"
            }
          }
        }
      ]
  }
}
